# Question 1 (a)
# Student name: Connie Keane

print("This program can find the perimeter or area of a quadrilateral")#i

length = float(input("Please enter the length: "))#iii
width = float(input("Please enter the width: "))#iii

length_ans = ((2 * length) + (2 * width))
width_ans = (length*width)

name = input("Please enter your user name: ")


choice = input("Do you want to find the (p)erimeter or (a)rea? ")
if choice == "p":
    print("A quadrilateral with a length of" ,length, "and a width of" ,width, "has a perimeter of: ", round(length_ans,2)) #vi  #v
elif choice == "a":
    print("A quadrilateral with a length of" ,length, "and a width of" ,width, "has an area of: ",round(width_ans,2)) #vi #v
    
print("Thank you for using the program" ,name) #ii

#Question 1 (b)
#Student name: Connie Keane
import random

computer_options = ["rock", "paper", "scissors"]

computer_choice = computer_options [random.randint(0,2)]

user_choice = input("Please choose rock, paper or scissors: ")
print(computer_choice)

if user_choice == "rock" and computer_choice == "scissors":
    print("Rock beats scissors, User wins!")
elif user_choice == "paper" and computer_choice == "rock":
    print("Paper beats rock, User wins!")
elif user_choice == "scissors" and computer_choice == "paper":
    print("Scissors beats paper, User wins!")


elif computer_choice == "rock" and user_choice == "scissors":
    print("Rock beats scissors, Computer wins!")
elif computer_choice == "paper" and user_choice == "rock":
    print("Paper beats Rock, Computer wins!")
elif computer_choice == "scissors" and user_choice == "paper":
    print("Scissors beats paper, Computer wins!")

if user_choice == computer_choice:
    print("Tie! play again")


# Question 2
# Student name: Connie Keane


num_vip = int(input("How many VIP tickets were sold? "))

num_reg = int(input("How many regular tickets were sold? "))

num_bud = int(input("How many budget tickets were sold? "))

total_revinue = ((num_vip * 150) + (num_reg * 75) + (num_bud * 40))

print("Your total revinue from the concert is" ,total_revinue, "euro.")
